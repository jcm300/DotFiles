# Print screen entire view
bindsym Print exec scrot '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/'

# Print screen selected window
bindsym $mod+Print exec "sleep 0.2; scrot -s '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/'"

# Print screen focused window
bindsym ctrl+Print exec scrot -u '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/'
